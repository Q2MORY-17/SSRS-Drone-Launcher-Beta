pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git url:'https://github.com/Q2MORY17/SSRS-Drone-Launcher-Beta', branch:'SSRS1-100'
      }
    }
    stage('Robot') {
      steps {

          bat 'robot -d test/results test/manual/robot/rotate.robot'

		    bat 'robot -d test/Results test/manual/robot/rotate.boundaries.robot'
		    bat 'robot -d test/Results test/manual/robot/resizeWindow.robot'

      }
      post {
        always {
          chuckNorris()
        }
      }
    }
    stage('Unit test') {
      steps {
        catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
          bat 'python3 -m pytest -v -s test/manual/unittest/test_drone_launcher_rotate.py'
        }

      }
    }
  }
}
